        <LinearLayout
            android:id="@+id/frameDadosProdutos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/list_item_title"
            android:layout_below="@+id/frameDadosEquipamento"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="vertical"
                android:scrollbars="vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/frameDadosEquipamento">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/tvPedidosLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:singleLine="true"
                        android:textStyle="bold"
                        android:text="Lista de itens do pedido:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_small" />


                </LinearLayout>

                <ListView
                    android:id="@+id/lsvProdutos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>


        </LinearLayout>


<!--        <ListView-->
<!--            android:id="@+id/lsvProdutos"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"/>-->












        </RelativeLayout>

    </LinearLayout>

</ScrollView>